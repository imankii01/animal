{
  "name": "moo-music-tracker-backend",
  "version": "1.0.0",
  "description": "Backend API for Moo Music Tracker - Dairy Farmer Milking Session Management",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "NODE_ENV=development nodemon -r dotenv/config server.js dotenv_config_path=.env.dev",
    "start:dev": "pm2 start ecosystem.config.js --env development --name moo-music-tracker-api",
    "start:prod": "pm2 start ecosystem.config.js --env production --name moo-music-tracker-api",
    "stop": "pm2 stop moo-music-tracker-api",
    "restart": "pm2 restart moo-music-tracker-api",
    "logs": "pm2 logs moo-music-tracker-api",
    "logs:error": "pm2 logs moo-music-tracker-api --err",
    "monit": "pm2 monit",
    "delete": "pm2 delete moo-music-tracker-api",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "dairy",
    "milking",
    "tracker",
    "api"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "joi": "^17.11.0",
    "mongoose": "^8.0.0",
    "twilio": "^5.12.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "dotenv": "^16.3.1",
    "nodemon": "^3.0.2",
    "pm2": "^5.3.0"
  }
}
